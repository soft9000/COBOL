cobol = cobc
opts = -x -free

OBJS = 	BANNER_EXAMPLE PROC_BANNER2 PROC_BANNER3

all: $(OBJS)

BANNER_EXAMPLE: BANNER_EXAMPLE.cob BIG_CHARS2.cpy
	$(cobol) $(opts) BANNER_EXAMPLE.cob

PROC_BANNER2: BANNER_EXAMPLE2.cob PROC_BANNER2.cob BIG_CHARS2.cpy 
	$(cobol) $(opts) BANNER_EXAMPLE2.cob PROC_BANNER2.cob -o PROC_BANNER2

PROC_BANNER3: BANNER_EXAMPLE2.cob PROC_BANNER3.cob BIG_CHARS3.cpy 
	$(cobol) $(opts) BANNER_EXAMPLE2.cob PROC_BANNER3.cob -o PROC_BANNER3

clean:
	rm -f $(OBJS) 
	rm -f *.so


